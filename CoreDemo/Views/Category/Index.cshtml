@using EntityLayer.Concrete
@model List<Category>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Durumu</th>
        <th>Detaylar</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>
            <td>
                <a class="btn btn-warning" asp-action="Detail" asp-controller="Category" asp-route-id="@item.CategoryID">Detaylar</a>
            </td>
            <td><a class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
