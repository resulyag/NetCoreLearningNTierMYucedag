@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturulma Tarihi</th>
        <th>Kategorisi</th>
        <th>Durumu</th>
        <th>Sil</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            <td>
                @if (@item.BlogStatus == true)
                {
                    <text>Aktif</text>
                }
                else
                {
                    <text>Pasif</text>
                }
            </td>
            <td><a asp-action="DeleteBlog" asp-controller="Blog" asp-route-id="@item.BlogID" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-warning">Düzenle</a></td>
            <td>
                @Html.ActionLink("Sil Butonu", "DeleteBlog", new { id = item.BlogID }, new { @class = "btn btn-danger", @onclick = "return corfirm('Gerçekten Silmek İstiyor Musunuz?');" })
            </td>
        </tr>
    }
</table>
<a href="#" class="btn btn-info">Yeni Blog Oluştur</a>

